<%= @customer.title %>
<%= @customer.body %>
<% @customer.profiles.each do |profile| %>
  <%= image_tag profile.variant(resize_to_limit: [100, 100]) %>
<% end %>


<div class="swiper">
  <div class="swiper-wrapper">
    <% @customer.profiles.each do |profile| %>
    <div class="swiper-slide">
       <%= image_tag profile.variant(resize_to_limit: [500, 600]) %>
    </div>
    <% end %>
  </div>
  <!-- ページネーションの要素 -->
  <div class="swiper-pagination"></div>
  <!-- ナビゲーションボタン （前、次） -->
  <div class="swiper-button-prev"></div>
  <div class="swiper-button-next"></div>
</div>